rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Products collection - allow read for all, write for authenticated users
    match /products/{productId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }

    // Orders collection - allow read/write for authenticated users
    match /orders/{orderId} {
      allow read, write: if request.auth != null;
    }

    // Users collection - users can read/write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId;
    }

    // Admins collection - allow authenticated users to read (for admin check)
    match /admins/{adminId} {
      allow read: if request.auth != null;
      allow write: if false; // Only manually created via Firebase Console
    }

    // Allow localhost during development
    match /{document=**} {
      allow read, write: if request.auth != null ||
                           request.headers.origin.matches('http://localhost:.*') ||
                           request.headers.origin.matches('https://localhost:.*') ||
                           request.headers.origin.matches('http://127.0.0.1:.*') ||
                           request.headers.origin.matches('https://127.0.0.1:.*');
    }
  }
}
