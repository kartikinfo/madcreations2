rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      // Allow authenticated users to read and write their own files
      allow read, write: if request.auth != null;

      // Allow anyone to read files (for public access)
      allow read: if true;

      // Allow uploads from localhost during development
      allow write: if request.auth != null ||
                     request.headers.origin.matches('http://localhost:.*') ||
                     request.headers.origin.matches('https://localhost:.*') ||
                     request.headers.origin.matches('http://127.0.0.1:.*') ||
                     request.headers.origin.matches('https://127.0.0.1:.*');
    }
  }
}
